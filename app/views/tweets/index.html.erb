    <!-- Tweets Section -->
    <section id="tweets" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading">The Tweets</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <ul class="timeline">
                      <% @tweets.each do |tweet| %>
                        <li <%= cycle("class=timeline-inverted", "")%> >
                            <div class="timeline-image">
                              <a href=<%= tweet.url %> >
                                <img src="tweet.svg" alt="Tweet" height="60px"></a>
                            </div>
                            <div class="timeline-panel">
                                <div class="timeline-heading">
                                    <h4>@Opternative:</h4>
                                    <h4 class="subheading"><%=tweet.created_at.strftime("%F at %I:%M%p") %></h4>
                                    
                                </div>
                                <div class="timeline-body">
                                    <p class="text-muted"><%= auto_link(tweet.text).html_safe %></p>
                                </div>
                            </div>
                        </li>
                      <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </section>

